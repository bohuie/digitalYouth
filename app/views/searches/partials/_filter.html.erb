<% formatted_name = name.downcase.tr(" ", "_") %>
<hr>
<h6 class="filter-title" onclick="$('#<%=formatted_name%>').slideToggle(100);"> <%=name%> <span class="caret"></span></h6>
<div id="<%=formatted_name%>" style="display: none;"> 
	<%= link_to	"All", search_path(q:@query, t:@type, f:@filters)%><br>
	<%filter_values.each do |v|%>
		<% path_hash = get_path_hash(@toggles,@query,@type) %>
		<% path_hash[key] = add_value(current_values,v) %>
		<% path_hash[:f] = add_filter(@filters, formatted_name, current_values) %>
		<%= link_to v, search_path(path_hash) %><br>
	<%end%>
</div>