<div class="row">
	<div class="col-md-6"><h2>Category: <%=@survey.format_title.html_safe%></h2> </div></div>
<div class="row">
	<div class="col-md-12">
		<%= column_chart survey_results, min: 0, max: 3, library: { legend: { position: "right" }, chartArea: {left: 10, bottom: 20, width: '70%', height: '80%'}, series:{0 => {type: "line"}}} %>
	</div>
</div>
<hr style="height: 1px;border:none;color:#333;background-color:#333;">
<div class="row">
<% @questions.each do |question| %>
	<div class="col-md-3">
	<h4><b><%= question.classification %></b></h4>

	<ul>
		<% question.prompts.each do |p| %>
			<li class="alternate"><%= p.prompt %></li>
		<% end %>
	</ul>
	</div>
<% end %>