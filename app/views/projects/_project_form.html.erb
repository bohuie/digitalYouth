<%= simple_form_for @project do |f| %>
	<%= f.input :title, required: true %>
		
	<%= f.input :description, required: true, as: :text, input_html: {rows: "4"}, wrapper_html: { class: "padding-left-0" } %>

	<%i=0%>
	<div id="project-skills">
		<%= f.simple_fields_for :project_skills do |builder| %>
			<%= render 'projects/project_skill_fields', id: i, f: builder %>
			<%i=i+1%>
		<% end%>
	</div>
	<p><%= link_to_add_project_skill_fields "Add Skill", f, "btn btn-primary" %></p>

	<%= f.input :image, as: :file %>
	
	<%= f.button :submit, class: "btn btn-primary" %>
<% end %>