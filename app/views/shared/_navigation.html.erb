<nav class="navbar navbar-default">
  <div class="container container-fluid">
    <div class="navbar-header">
        <a class="navbar-brand" href="/">Home Icon</a>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li><%= link_to('My Profile', current_user) %></li>
        <% end %>
      </ul>

      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
      </form>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><a class="navbar-brand"><%= current_user.first_name %></a></li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-comment"></span></a>
            <ul class="dropdown-menu" role="menu">
              <% for activity in @bar_activities %>
                <% if !activity["is_seen"] %>
                  <li class="unread"><%= render_activity activity %></li>
                <% else %>
                  <li class="read"><%= render_activity activity %></li>
                <% end %>
              <% end %>
              <% if @bar_activities == nil %>
                <li><a>You have no notifications!</a></li>
              <% else %>
              <li><%= link_to "Show all notifications", notifications_path %></li>
              <% end %>
            </ul>
          </li>

          <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
        <% else %>
          <li><%= link_to('Login', new_user_session_path)  %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>