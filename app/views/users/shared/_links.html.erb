<%- if controller_name != 'sessions' && controller_name != 'welcome' %>
  <%= link_to "Log in", new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' && controller_name != 'sessions' && controller_name != 'welcome' %>
  <%= link_to "Sign up", welcome_index_path %><br />
<% end -%>

<%- if devise_mapping.omniauthable? && controller_name != 'welcome' %>
  <%- Devise.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-block btn-social-icon btn-#{provider}", style: "display: inline-block; margin-top: 0px;" do%>
      <span class="fa fa-<%= provider %>"></span>
    <% end %>
  <% end -%>
  <br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' && controller_name != 'welcome' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'registrations' && controller_name != 'welcome' %>
<%= link_to "Forgot your email?", lost_email_path %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <!--<%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path(resource_name) %><br /> -->
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>
