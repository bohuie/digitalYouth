<nav class="navbar navbar-default">
  <div class="container container-fluid">
    <div class="navbar-header">
        <a class="navbar-brand" href="/">Home Icon</a>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li><%= link_to('My Profile', current_user) %></li>
        <% end %>
      </ul>

      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
      </form>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><a class="navbar-brand"><%= current_user.first_name %></a></li>

          <li class="dropdown">                                   
            <%= link_to show_notifications_path, html_options = 
            {class: "dropdown-toggle", "data-toggle"=>"dropdown","data-remote"=>"true"}, remote: true do %>
              <span class="glyphicon glyphicon-comment"></span>
              <span id="notif-num">
              <% if @num_notifications_unseen > 0 %>
                <%= @num_notifications_unseen %>
              <% end %>
              </span>
            <% end %>

            <ul id="notif-list" class="dropdown-menu" role="menu">
              <% if @bar_activities == nil %>
                <li><a>You have no notifications!</a></li>
              <% else %>
                <%= render 'shared/notifications', :local_activities => @bar_activities %>
                <li><%= link_to "Show all notifications", notifications_path %></li>
              <% end %>
            </ul>
          </li>

          <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
        <% else %>
          <li><%= link_to('Login', new_user_session_path)  %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>