<h2>Sign up</h2>
<div class=col-xs-6>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.input :first_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :last_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    What is your role? </br>
    <%= radio_button_tag :role, 'employee', checked: true%>
    <%= label :role_employee, 'Employee' %> </br>
    <%= radio_button_tag :role, 'employer'%>
    <%= label :role_employer, 'Employer' %>
  </div>
  
  <%= recaptcha_tags %>
  
  <div class="submit">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
