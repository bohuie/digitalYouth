<%= render "users/shared/profile" %>

<%= render partial: "shared/site_tabs", locals: {active: "projects", user_path: user_path(@user)} %>

<div class="row">
	<div class="col-md-12">
		<h4><b><%= @project.title %></b></h4>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<p>Below, you can find more information about <%= @project.title %>.</p>
	</div>
</div>
<div class="row">
	<div class="col-md-1">
		<%= @project.project_date.strftime('%B')+", "+@project.project_date.strftime('%Y') %>
	</div>
	<div class="col-md-3">
		<%= image_tag @project.image.url(:medium) %>
	</div>
	<div class="col-md-5">
		<h2><%= @project.title %></h2>
		<p><%= @project.description %></p>
		<% index = 1 %>
		<% if !@project.skills.empty? %>
			<p>Skills associated with this project:</p>
			<% @project.skills.each do |s| %>
				<%=s.name%>
				<% if index < @project.skills.length %>
					<%=", " %>
					<% index = index+1 %>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>