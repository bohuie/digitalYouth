<%= link_to "References", references_path %>
<% r = @reference %>
<h3><%= r.first_name%> <%= r.last_name %></h3>
<h4><%= r.company%>: <%= r.position %></h4>
<h6>Contact: Email: <%= r.email %> , Phone: <%= r.phone_number %> </h6>
<p><%= r.reference_body %></p>
<% if @reference.confirmed%>
	<%= link_to "UnConfirm", update_reference_path(r), method: "patch" %> <%= link_to "Delete", delete_reference_path(r), method: "delete" %>
<% else %>
	<%= link_to "Confirm", update_reference_path(r), method: "patch" %> <%= link_to "Delete", delete_reference_path(r), method: "delete" %> 
<% end %>