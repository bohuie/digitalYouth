<div class="row">
	<div class="col-md-2 search-sidebar">
		<%= link_to "Users", search_path(q:@query, t:"Users",f:"User") %><br>
		<%= link_to "Companies", search_path(q:@query, t:"Users", f:"Company") %><br>
		<%= link_to "Projects", search_path(q:@query, t:"Projects") %><br>
		<%= link_to "Job Postings", search_path(q:@query, t:"JobPostings") %><br>
		
		<%if @filter == "Company" %>
			<hr>
			<h6>Province</h6>
			<%@provinces.each do |p|%>
				<% val = add_condition(@value,p.company_province)%>
				<%= link_to p.company_province, search_path(q:@query, t:"Users", f:"Company", v:val) %><br>
			<%end%>
		<% end %>
	</div>

	<div class="col-md-5 search">
		<% if !@results.nil? %>
			<% if !@results.empty? %>
				<p><%=raw("Search results for #{@query}<br>") if !@query.empty?%>
				Returned <%=@results.size%> results.<br>
			<% else %>
				<p>No results found for <%=@query%><br>
			<% end %>
			Took <%=@results.took%>ms.</p>
			<% @results.each do |r|%>
				<div onclick="window.location='<%=search_nav_path(obj:r.class.name,obj_id:r.id,id:@results.search.id,path:polymorphic_path(r))%>'"> 
					<%= render "searches/results/#{r.class.name.downcase}", result: r %>
				</div>
			<% end %>
		<% else %>
			<p>No results found for <%=@query%></p>
		<% end %>
	</div>
</div>