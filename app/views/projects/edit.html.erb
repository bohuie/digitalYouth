<div class ="profileContainer", style="height: 250px">
	<div class ="profileContainerImage" id="shadow-arch-edges">
		<div class ="profileFrame">
			<%= image_tag current_user.image.url, alt:"User Icon" %> <!-- Should add a max size or auto scale pics that are uploaded -->
		</div>
	</div>
	<div class ="profileContainerContent">
		<h2> <%= current_user.first_name %> <%= current_user.last_name %> </h2>
		<h5> <%= current_user.street_address %> <%= current_user.city %> <%= current_user.province %> <%= current_user.postal_code %> </h5>
		<h5> <%= current_user.email %> </h5>
		<% if !current_user.github.nil? %>
			<%= link_to 'GitHub', current_user.github, id: 'github', onmouseover: 'buttonOpac(this)', onmouseout:'buttonRevOpac(this)' %> 
		<% end %>
		<% if !current_user.linkedin.nil? %>
			<%= link_to 'Linkedin', current_user.linkedin, id: 'linkedin', onmouseover: 'buttonOpac(this)', onmouseout:'buttonRevOpac(this)' %> 
		<% end %>
		<% if !current_user.twitter.nil? %>
			<%= link_to 'Twitter', current_user.twitter, id: 'twitter', onmouseover: 'buttonOpac(this)', onmouseout:'buttonRevOpac(this)' %> 
		<% end %>
		<% if !current_user.facebook.nil? %>
			<%= link_to 'Facebook', current_user.facebook, id: 'facebook', onmouseover: 'buttonOpac(this)', onmouseout:'buttonRevOpac(this)' %> 
		<% end %>
		<%= raw('<br>') if current_user.github.nil? && current_user.linkedin.nil? && current_user.twitter.nil? && current_user.facebook.nil? %>
	</div>
</div>

<%= simple_form_for @project do |f| %>
<div class="row">
	<div class="col-md-6">
		<div class="row">
			<div class="col-md-6">
				<%= f.input :title, required: true %>
			</div>
			<div class="col-md-6">
				<%= f.input :project_date %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<%= f.input :description, required: true, as: :text, input_html: {rows: "4"}%>
			</div>
		</div>
	</div>
	<div class="col-md-6", style="height: 300px">
		<%= f.input :image, as: :file%>
		<script type="text/javascript">
			$(function() {
  				$('#project_image').on('change', function(event) {
   					var files = event.target.files;
    				var image = files[0]
    				var reader = new FileReader();
    				reader.onload = function(file) {
      					var img = new Image();
      					console.log(file);
      					img.src = file.target.result;
      					img.style.height = '200px';
      					img.style.width = '200px';
      					$('#target').html(img);
    				}
    				reader.readAsDataURL(image);
    				console.log(files);
  				});
			});
		</script>
		<div id="target">
		</div>
	</div>
</div>
	<%i=0%>
	<div id="project-skills">
		<%= f.simple_fields_for :project_skills do |builder| %>
			<div class="col-md-12 project-skill" id="project-skill-<%=i%>">
				<%= builder.input :id, as: :hidden %>
				<%= builder.simple_fields_for :skill do |s| %>
					<div class="col-md-3"><%= s.input :name, label: "Skill", input_html: {onclick:"skill_autocomplete('#{i}')", id: "skill-name-#{i}"} %></div>
				<% end %>
				<div class="col-md-6"><%= builder.input :survey_id, required:true, collection: @surveys, prompt: "Select Classification", label: "Associated Survey Skill and Level"%></div>
				<div class="col-md-1">
					<%= builder.input :_destroy, as: :hidden, input_html: {id: "project-skill-destroy-#{i}"}%>
					<span class="glyphicon glyphicon-remove" onclick="remove_project_skill('<%=i%>')"></span>
				</div>
			</div>
			<%i=i+1%>
		<% end%>
	</div>
	<p><%= link_to_add_project_skill_fields "Add Skill", f, "btn btn-default" %></p>

	<%= f.button :submit %>
<% end %>