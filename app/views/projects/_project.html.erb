<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12">
		<h4><b><%= @project.title %></b></h4>
	</div>
</div>

<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12">
		<p>Below, you can find more information about <%= @project.title %>.</p>
	</div>
</div>
<div class="project-info-row row">
	<div class="col-xs-2 col-sm-1 col-md-1" style="min-width: 100px;">
		<%= @project.project_date.strftime('%B')+", "+@project.project_date.strftime('%Y') %>
	</div>
	<div class="col-xs-4 padding-0 col-sm-4 col-md-3">
		<%= image_tag @project.image.url(:medium) %>
	</div>
	<div class="col-xs-12 col-sm-5 col-md-5">
		<h2><%= @project.title %></h2>
		<p><%= @project.description %></p>
		<% if !@project.skills.empty? %>
			<p>Skills associated with this project:</p>
			<ul>
				<% if @project.skills.count > 4 %>
					<% index = 0 %>
					<% @project.skills.each do |s| %>
						<% if index % 2 == 0 %>
							<div class="row">
								<div class="col-xs-6 col-sm-6 col-md-6">
									<li><%=s.name%></li>
									<% index += 1 %>
								</div>
						<% else %>
								<div class="col-xs-6 col-sm-6 col-md-6">
									<li><%=s.name%></li>
									<% index += 1 %>
								</div>
							</div>
						<% end %>
					<% end %>
					<% if index %2 == 1%>
						</div> <!-- close off the row above when odd number of skills -->
					<% end %>
				<% else %>
					<% @project.skills.each do |s| %>
						<li><%=s.name%></li>
					<% end %>
				<% end %>
			</ul>
		<% end %>
	</div>
</div>