<% if flash[:notice] %>
    <div class="alert alert-info alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= flash[:notice] %></div>
<% end %>

<% if @user.has_role? :employee %>
	
	<div class ="container">
		<p> User Information </p>
		<p> <%= @user.first_name %> </p>
		<p> <%= @user.last_name %> </p>
		<p> <%= @user.email %> </p>
	</div>

	<% if !@references.empty? %>
		<div class="references">
			<div class="container">
				<div class="row">
					<div class="col-xs-6">
						<% if user_signed_in? && @current_user==@user %>
							<% if @num_unconfirmed_references > 0 %>
								<h2> <%= link_to "References - (#{@num_unconfirmed_references})", references_path %> </h2>
							<% else %>
								<h2> <%= link_to "References", references_path %> </h2>	
							<% end %>
						<% else %>
							<h2> References </h2>
						<% end %>
						
						<% @references.each do |r| %>
							<h3><%= r.first_name%> <%= r.last_name %></h3>
							<h4><%= r.company%>: <%= r.position %></h4>
							<h6>Contact: Email: <%= r.email %> , Phone: <%= r.phone_number %> </h6>
							<p><%= r.reference_body %></p>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	<% else %>
		<% if user_signed_in? && @current_user==@user %>
			<h5>You have no confirmed references. Check out your <%= link_to "references", references_path %> to confirm
			 some or Click this <%= link_to "link", email_reference_path %> and get your referers to fill out the forum!</h5>
		<% end %>
	<% end %>

	<% if !@projects.empty? %>
		<div class="projects">
			<div class="container">
				<div class="row">
					<div class="col-xs-6">
						<% @projects.each do |p| %>
							<%= image_tag p.image.url %>
							<h2><%= p.title %></h2>
							<p><%= p.description %></p>
							<% if !@skills.empty? %>
								<p>Skills associated with this project</p>
								<% @skills[p.id].each do |s| %>
									<p><%= s.name%> </p>
								<% end %>
							<% end %>
							<% if user_signed_in? && @current_user==@user %>
								<%= link_to "Edit Project", edit_project_path(p) %><br />
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	<% else %>
		<h3>You have no posted projects.  Fill out the form below to create one!</h3>
	<% end %>
	<% if user_signed_in? && @current_user==@user %>
		<div class="row">
			<h3>Create another project below!</h3>
		</div>
		<div class ="container">
			<div class ="row">
				<div class="col-xs-6">
					<%= simple_form_for @project do |f| %>
						<%= f.input :title, required: true %>
						<%= f.input :description, required: true, as: :text %>
						<%= f.input :image, as: :file %>
						<%= f.button :submit %>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
	<% if !@user_skills.empty? %>
		<div class="container">
			<h2>Here is a summary of your skill base</h2>
			<% @user_skills.each do |us| %>
				<div class="row">
					<div class="col-xs-4">
						<%= us.skill.name %> with a rating of <%= us.rating %> / <%= ENV['MAX_RATING'] %>
					</div>
				</div>
			<% end %>
		</div>
	<% end %>
	<% if user_signed_in? && @current_user==@user %>
		<%= simple_form_for @user_skill do |g| %>
			<%= g.input :name %>	
			<%= g.input :rating, as: :radio_buttons, collection: 0..Integer(ENV['MAX_RATING'])%>
			<%= g.button :submit %>
		<% end %>
	<% end %>
	</div>
<% elsif @user.has_role? :employer %>

	<% if !@job_postings.empty? %>
		<div class="job-postings">
			<div class="container">
				<div class="row">
					<div class="col-xs-6">
						<% @job_postings.each do |j| %>
							<h2><%= j.title %></h2>
							<p><%= j.description %></p>
							<p>Job Posting available at: <%= j.open_date %></p>
							<p>Cut off for applicants is: <%=j.close_date%></p>
							<% if user_signed_in? && @current_user==@user %>
								<%= link_to "Edit Posting", edit_job_posting_path(j) %>
							<% end %>
						<% end %>
					</div>
				</div>
				<div class="row">
					<h2>Add another job posting below!</h2>
				</div>
			</div>
		</div>
	<% else %>
		<h3>You have no job postings here.  Would you like to create one?</h3>
	<% end %>
	<% if user_signed_in? && @current_user==@user %>
	<div class ="container">
		<div class ="row">
			<div class="col-xs-6">
				<%= simple_form_for @job_posting do |f| %>
					<%= f.input :title, required: true %>
					<%= f.input :description, required: true, as: :text %>
					<%= f.input :open_date, required: true %>
					<%= f.input :close_date, required: true %>
					<%= f.button :submit %>
				<% end %>
			</div>
		</div>
	</div>
	<% end %>
<% elsif @user.has_role? :admin%>

<% else %>
<% end %>