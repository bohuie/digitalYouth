<% if @user.has_role? :employee %>
	
	<div class ="container">
		<p> User Information </p>
		<p> <%= @user.first_name %> </p>
		<p> <%= @user.last_name %> </p>
		<p> <%= @user.email %> </p>
	</div>

 	<div class = "survey-table">
		<!-- <%= render '/users/partials/show_survey_table' %> -->
	</div>

	<div class = "references">
		<!-- <%= render '/users/partials/show_references' %> -->
	</div>
	<% if !@user_skills.empty? %>
		<div class="container">
			<h2>Here is a summary of your skill base</h2>
			<% @user_skills.each do |us| %>
				<div class="row">
					<div class="col-xs-4">
						<%= us.skill.name %> with a rating of <%= us.rating %> / <%= max_rating %>
					</div>
				</div>
			<% end %>
		</div>
	<% end %>
	<% if user_signed_in? && @current_user==@user %>
		<%= simple_form_for @user_skill do |g| %>
			<%= g.input :name %>	
			<%= g.input :rating, as: :radio_buttons, collection: 0..Integer(max_rating)%>
			<%= g.button :submit %>
		<% end %>
	<% end %>
	</div>
<% elsif @user.has_role? :employer %>

	<% if !@job_postings.empty? %>
		<div class="job-postings">
			<div class="container">
				<div class="row">
					<div class="col-xs-6">
						<% @job_postings.each do |j| %>
							<h2><%= j.title %></h2>
							<p><%= j.description %></p>
							<p>Job Posting available at: <%= j.open_date %></p>
							<p>Cut off for applicants is: <%=j.close_date%></p>
							<% if user_signed_in? && @current_user==@user %>
								<%= link_to "Edit Posting", edit_job_posting_path(j) %>
							<% end %>
						<% end %>
					</div>
				</div>
				<div class="row">
					<h2>Add another job posting below!</h2>
				</div>
			</div>
		</div>
	<% else %>
		<h3>You have no job postings here.  Would you like to create one?</h3>
	<% end %>
	<% if user_signed_in? && @current_user==@user %>
	<div class ="container">
		<div class ="row">
			<div class="col-xs-6">
				<%= simple_form_for @job_posting do |f| %>
					<%= f.input :title, required: true %>
					<%= f.input :description, required: true, as: :text %>
					<%= f.input :open_date, required: true %>
					<%= f.input :close_date, required: true %>
					<%= f.button :submit %>
				<% end %>
			</div>
		</div>
	</div>
	<% end %>
<% elsif @user.has_role? :admin%>

<% else %>
<% end %>