// Update notifications list
$('#notif-list').html("<%= j (render 'shared/notifications', :local_activities => @notifications) %>");

// Re-add the loading bar and hide it (for infinite scrolling)
$('#notif-list').append("<img id=\"notif-loading\" class=\"loading-image\" "+
	"src=\"<%=asset_path('loading.gif')%>\" alt=\"Loading..\">");

<% if @notifications.count > 5%>
	$('#notif-loading').css("visibility","hidden");
<% else %>
	$('#notif-loading').hide();
<% end %>

// Updates the notification page
$('#index-notifs').html("<%= j (render 'shared/notifications', :local_activities => @notifications) %>");
$('#index-notifs').append("<img id=\"ajax-loading\" class=\"loading-image\" "+
		"src=\"<%=asset_path('loading.gif')%>\" alt=\"Loading..\">");
$('#ajax-loading').hide();
$('#upd-all').hide();