<%r = activity.trackable %>
<div>
	<% if r.referee.nil? %>
		<img src="<%=asset_path('avatar-placeholder-thumb.svg')%>" alt="User Icon" style="float: left;  padding-right: 5px;">
	<% else %>
		<%= image_tag r.referee.image.url(:thumb), alt:"User Icon", class:"image-radius", style: "float:left;  padding-right: 5px;" %>
	<% end %>
	<div class="text">
		<%= "#{r.first_name} #{r.last_name}"%> gave you a reference!<br>
		<%= local_time_ago(activity.created_at) %>
	</div>
</div>
<div style="clear:both;"></div>
