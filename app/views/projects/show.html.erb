<%= render "users/shared/profile" %>

<div class="container" id="profileButtons">
	<ul class="nav nav-tabs profileButtonContent">
		<li onmouseover=buttonOpac(this); onmouseout=buttonRevOpac(this); onmousedown=setUserTab("surveys","<%=user_path(@user)%>");><a data-toggle="tab" href="<%=user_path(@user)%>">SURVEYS</a></li>
        <li class="active" onmouseover=buttonOpac(this); onmouseout=buttonRevOpac(this); onmousedown=setUserTab("projects","<%=user_path(@user)%>");><a data-toggle="tab" href="#projects">PROJECTS</a></li>
        <li onmouseover=buttonOpac(this); onmouseout=buttonRevOpac(this); onmousedown=setUserTab("skills","<%=user_path(@user)%>");><a data-toggle="tab" href="#skills">SKILLS</a></li>
        <li onmouseover=buttonOpac(this); onmouseout=buttonRevOpac(this); onmousedown=setUserTab("references","<%=user_path(@user)%>");><a data-toggle="tab" href="#references">REFERENCES</a></li>
    </ul>
</div>

<div class="col-md-1">
	<%= @project.project_date.strftime('%B')+", "+@project.project_date.strftime('%Y') %>
</div>
<div class="col-md-3">
	<%= image_tag @project.image.url(:medium) %>
</div>
<div class="col-md-5">
<h2><%= @project.title %></h2>
<p><%= @project.description %></p>
<% index = 1 %>
<% if !@project.skills.empty? %>
	<p>Skills associated with this project:</p>
	<% @project.skills.each do |s| %>
		<%=s.name%>
		<% if index < @project.skills.length %>
			<%=", " %>
			<% index = index+1 %>
		<% end %>
	<% end %>
<% end %>
</div>